<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Online Library</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .carousel-inner {
      height: 200px;
      overflow: hidden;
    }

    .carousel-item img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
    
    /* Added to prevent layout shift when images load */
    .book-list-img {
      width: 64px;
      height: 64px;
      object-fit: cover;
      flex-shrink: 0; /* Prevent image from being squished */
    }
  </style>
</head>

<body>
  <!-- Navbar (unchanged) -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Online Library</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/books">Books</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/search">Search</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Carousel (minimal improvements) -->
  <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% if (highlightedBooks.length > 0) { %>
        <% highlightedBooks.forEach((book, index) => { %>
          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
            <% if(book.coverImage) { %>
              <img src="<%= book.coverImage %>" 
                   class="d-block w-100" 
                   alt="<%= book.title || 'Book ' + (index + 1) %>"
                   onerror="this.src='https://picsum.photos/id/<%= 661 + index %>/800/200'">
            <% } else { %>
              <img src="https://picsum.photos/id/<%= 661 + index %>/800/200" 
                   class="d-block w-100" 
                   alt="<%= book.title || 'Book ' + (index + 1) %>">
            <% } %>
          </div>
        <% }); %>
      <% } else { %>
        <!-- Fallback if no highlighted books -->
        <div class="carousel-item active">
          <img src="https://picsum.photos/id/661/800/200" class="d-block w-100" alt="Featured books coming soon">
        </div>
      <% } %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <br-->

  <!-- Tabs (unchanged) -->
  <ul class="nav nav-tabs mx-3">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="#">New</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Trending</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Hot</a>
    </li>
  </ul>

  <!-- Book List (minimal improvements) -->
  <div class="container mx-3">
    <% books.slice(0, 6).forEach((book, index) => { %>
      <div class="d-flex align-items-center py-3 border-bottom">
        <!-- Added link to book details -->
        <a href="/book/detail/<%= book._id %>" class="me-3">
          <% if(book.coverImage) { %>
            <img src="<%= book.coverImage %>" 
                 class="book-list-img"
                 alt="<%= book.title || 'Book cover' %>"
                 onerror="this.src='https://picsum.photos/id/<%= 661 + index %>/64'">
          <% } else { %>
            <img src="https://picsum.photos/id/<%= 661 + index %>/64" 
                 class="book-list-img"
                 alt="<%= book.title || 'Book cover' %>">
          <% } %>
        </a>
        <div>
          <h4 class="mb-1">
            <a href="/book/detail/<%= book._id %>" class="text-decoration-none text-dark">
              <%= book.title || 'Book ' + (index + 1) %>
            </a>
          </h4>
          <% if (book.description) { %>
            <p class="mb-0 text-muted"><small>
              <%= book.description.length > 100 ? book.description.substring(0, 100) + '...' : book.description %>
            </small></p>
          <% } %>
        </div>
      </div>
    <% }); %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>